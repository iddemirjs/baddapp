<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="2dp">

    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:drawableEnd="@drawable/braincoin"
        android:backgroundTint="@color/libVioletDark">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="35dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/braincoin">
            </ImageView>

            <TextView
                android:id="@+id/duel_Braincoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="100"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginRight="90dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/question_mark"
                android:backgroundTint="@color/white">
            </ImageView>

            <TextView
                android:layout_gravity="center"
                android:text="100"
                android:textStyle="bold"
                android:textSize="15dp"
                android:id="@+id/duel_Question"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="145dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/profile_user"
                android:backgroundTint="@color/white">
            </ImageView>

            <TextView
                android:text="100"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:id="@+id/duel_BatUser"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>

        <TextView
            android:id="@+id/duel_Category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp"
            android:text="Geography"
            android:textColor="@color/libYellow5x"
            android:textSize="25dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/libYellow5x"
            android:id="@+id/duel_User"
            android:text="Username"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="20dp">

        </TextView>



    </androidx.cardview.widget.CardView>


</LinearLayout>