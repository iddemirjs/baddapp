<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/createaccount_button"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/badappbg"
    tools:context=".RegisterActivity">

    <EditText
        android:id="@+id/register_passwordagain"
        android:layout_width="326dp"
        android:layout_height="49dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/loginscreen_edittext_background"
        android:drawableLeft="@drawable/passworddraw"
        android:ems="10"
        android:hint=" Password Again"
        android:inputType="textPassword"
        android:paddingLeft="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_password" />

    <EditText
        android:id="@+id/register_password"
        android:layout_width="326dp"
        android:layout_height="49dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/loginscreen_edittext_background"
        android:drawableLeft="@drawable/passworddraw"
        android:ems="10"
        android:hint=" Password"
        android:inputType="textPassword"
        android:paddingLeft="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_email" />

    <EditText
        android:id="@+id/register_username"
        android:layout_width="326dp"
        android:layout_height="49dp"
        android:layout_marginTop="148dp"
        android:background="@drawable/loginscreen_edittext_background"
        android:drawableLeft="@drawable/userdraw"
        android:ems="10"
        android:hint=" Username"
        android:inputType="textPersonName"
        android:paddingLeft="5dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/register_email"
        android:layout_width="326dp"
        android:layout_height="49dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/loginscreen_edittext_background"
        android:drawableLeft="@drawable/emaildraw"
        android:ems="10"
        android:hint=" Email"
        android:inputType="textPersonName"
        android:paddingLeft="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_username" />

    <RadioGroup
        android:id="@+id/radio_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_passwordagain">

        <RadioButton
            android:id="@+id/register_malebutton"
            android:layout_width="103dp"
            android:layout_height="42dp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:buttonTint="@color/white"
            android:padding="12dp"
            android:text="Male"
            android:textAlignment="center"
            android:textColor="@drawable/radio_text"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/register_femalebutton"
            android:layout_width="103dp"
            android:layout_height="42dp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:padding="12dp"
            android:text="Female"
            android:textAlignment="center"
            android:textColor="@drawable/radio_text"
            android:textStyle="bold" />

    </RadioGroup>

    <TextView
        android:id="@+id/registertext"
        android:layout_width="322dp"
        android:layout_height="53dp"
        android:layout_marginTop="52dp"
        android:paddingLeft="80dp"
        android:text="REGISTER"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/register_button"
        android:layout_width="175dp"
        android:layout_height="52dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/loginscreen_edittext_background"
        android:backgroundTint="@color/libYellow4x"
        android:text="CREATE ACCOUNT"
        android:textColor="@color/loginbuttoncolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radio_sex" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="600dp">

        <TextView
            android:id="@+id/register_alreadyhaveanccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account ?  |"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/register_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text=" Sign in"
            android:textColor="@color/white"
            android:textStyle="bold|italic"
            app:layout_constraintTop_toBottomOf="@+id/register_button" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>