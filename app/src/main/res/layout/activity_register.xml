<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/createaccount_button"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loginbackground5"
    tools:context=".RegisterActivity">

    <EditText
        android:id="@+id/register_passwordagain"
        android:layout_width="326dp"
        android:layout_height="49dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/loginscreen_edittext_background"
        android:drawableLeft="@drawable/passworddraw"
        android:ems="10"
        android:hint=" Password Again"
        android:inputType="textPassword"
        android:paddingLeft="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_password" />

    <EditText
        android:id="@+id/register_password"
        android:layout_width="326dp"
        android:layout_height="49dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/loginscreen_edittext_background"
        android:drawableLeft="@drawable/passworddraw"
        android:ems="10"
        android:hint=" Password"
        android:inputType="textPassword"
        android:paddingLeft="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_email" />

    <EditText
        android:id="@+id/register_username"
        android:layout_width="326dp"
        android:layout_height="49dp"
        android:layout_marginTop="148dp"
        android:background="@drawable/loginscreen_edittext_background"
        android:drawableLeft="@drawable/userdraw"
        android:ems="10"
        android:hint=" Username"
        android:inputType="textPersonName"
        android:paddingLeft="5dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/register_email"
        android:layout_width="326dp"
        android:layout_height="49dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/loginscreen_edittext_background"
        android:drawableLeft="@drawable/emaildraw"
        android:ems="10"
        android:hint=" Email"
        android:inputType="textPersonName"
        android:paddingLeft="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_username" />

    <RadioButton
        android:id="@+id/register_malebutton"
        android:layout_width="103dp"
        android:layout_height="42dp"
        android:layout_marginTop="44dp"
        android:buttonTint="@color/white"
        android:text="Male"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.353"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_passwordagain" />

    <RadioButton
        android:id="@+id/register_femalebutton"
        android:layout_width="103dp"
        android:layout_height="42dp"
        android:layout_marginTop="44dp"
        android:buttonTint="@color/white"
        android:text="Female"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.724"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_passwordagain" />

    <TextView
        android:id="@+id/registertext"
        android:layout_width="322dp"
        android:layout_height="53dp"
        android:layout_marginTop="52dp"
        android:paddingLeft="80dp"
        android:text="REGISTER"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/register_gendertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Gender"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.167"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_passwordagain" />

    <TextView
        android:id="@+id/register_linetext"
        android:layout_width="290dp"
        android:layout_height="36dp"
        android:layout_marginTop="84dp"
        android:text="___________________________"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_passwordagain" />

    <Button
        android:id="@+id/button"
        android:layout_width="175dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="@color/loginbuttoncolor"
        android:text="CREATE ACCOUNT"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_linetext" />

    <TextView
        android:id="@+id/register_alreadyhaveanccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="12dp"
        android:text="Already have an account ?  |"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/register_signin"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <TextView
        android:id="@+id/register_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="104dp"
        android:clickable="true"
        android:text="Sign in"
        android:textColor="@color/white"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

</androidx.constraintlayout.widget.ConstraintLayout>