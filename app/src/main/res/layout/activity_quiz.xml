<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/libVioletDark"
    tools:context=".QuizActivity">


    <RelativeLayout
        android:background="@color/libVioledMid"
        android:layout_width="match_parent"
        android:layout_height="40sp">
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:background="@drawable/ic_back_foreground"
            android:backgroundTint="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            >
        </ImageView>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/questionCount"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:text="10/10"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textColorHighlight="@color/libVioletDark">

        </TextView>
        <FrameLayout
            android:layout_width="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="80dp"
            >
            <ProgressBar
                android:id="@+id/time_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:background="@drawable/circle_shape"
                android:progressDrawable="@drawable/circle_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:indeterminate="false"
                android:textAlignment="center"
                android:max="20"
                >

            </ProgressBar>
            <TextView
                android:id="@+id/timeText"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="0"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_gravity="center"

                >
            </TextView>
        </FrameLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="500dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/question_background">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="20dp"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:id="@+id/questionCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:text="En ibne kimdir ?"
                >

            </TextView>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardA"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:onClick="optionA_clicked"
            >
            <TextView
                android:id="@+id/card_optionA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:text="Celal"
                >

            </TextView>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardB"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:onClick="optionB_clicked"
            >
            <TextView
                android:id="@+id/card_optionB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:text="Furkan "
                >

            </TextView>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardC"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:onClick="optionC_clicked"
            >
            <TextView
                android:id="@+id/card_optionC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:text="Batu"
                >

            </TextView>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardD"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:onClick="optionD_clicked"
            >
            <TextView
                android:id="@+id/card_optionD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:text="Obama"
                >

            </TextView>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/next_question"
            android:layout_width="200dp"
            android:text="Next"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@color/white"
            android:onClick="nextclicked">

        </Button>
    </LinearLayout>



</LinearLayout>